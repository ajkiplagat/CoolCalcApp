<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.student.coolcalc.CalcActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="605dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="#38c5c6"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="0.09"
                android:gravity="bottom|right"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:text="0"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/seven_button"
                android:textColor="@android:color/background_dark"
                android:textSize="28sp" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/eight_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/nine_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/divideBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/divide"
                android:visibility="visible"
                app:srcCompat="@drawable/divide" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/four_button"
                android:textColor="@android:color/background_dark"
                android:textSize="28sp" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/five_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/six_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/divideBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/multiply"
                app:srcCompat="@drawable/multiply" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/one_button"
                android:textColor="@android:color/background_dark"
                android:textSize="28sp" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/two_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/three_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/divideBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/subtract"
                app:srcCompat="@drawable/subtract" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/clear_button"
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="@string/zero_button"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/divideBtn"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/add"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:background="@android:color/transparent"
        android:paddingLeft="350dp"
        android:paddingRight="20dp"
        android:paddingTop="110dp"
        android:src="@drawable/equal"
        app:srcCompat="@drawable/equal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

</android.support.constraint.ConstraintLayout>

